<h1>Update Stop: <%= @stop.stop_id %></h1>

<form action="/home/operators/stops/<%= @stop.stop_id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <select name = "train_name">
      <%if @trains.any? %>
      <% @trains.each do |train| %>
      <option value = <%= train.name %>> <%= train.name%> </option>
      <%end%>
      <%else%>
      <p> Please add trains </p>
      <% end %>
    </select>

    <select name = "city_name">
      <%if @cities.any? %>
      <% @cities.each do |city| %>
      <option value = <%= city.name %>> <%= city.name%> </option>
      <%end%>
      <%else%>
      <p> Please add cities </p>
      <% end %>
    </select>

    <input name="time" class="form-control" type="time" required>



  </div>
  <button type="submit" class="btn btn-primary">Update the Stop</button>


</form>

<form action="/home/operators/stops/<%= @stop.stop_id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-primary">Delete Stop</button>
</form>
</br>

<a href="/home/operator">Return to Operator Home</a>
